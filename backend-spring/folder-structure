src/main/java/com/example/lexiguard/

├── application/                  # Application-level configs & services
│   ├── security/                 # Security config, filters, and handlers
│   │   ├── JwtAuthFilter.java
│   │   ├── SecurityConfig.java
│   │   └── CustomUserDetailsService.java
│   ├── validation/              # Global validators & annotations
│   │   ├── ValidEmail.java
│   │   └── ValidEmailValidator.java
│   ├── logging/                 # Logging interceptors or AOP
│   │   ├── RequestLoggingAspect.java
│   └── exceptions/              # Global exception handling
│       ├── GlobalExceptionHandler.java
│       ├── CustomException.java
│       └── ErrorResponse.java

├── domain/                      # Core domain models & logic
│   ├── user/
│   │   ├── User.java
│   │   └── Role.java
│   └── legalcase/
│       ├── LegalCase.java
│       └── Document.java

├── features/                    # Vertical slices (by use case/feature)
│   ├── auth/                    # Auth feature slice
│   │   ├── AuthController.java
│   │   ├── AuthService.java
│   │   ├── LoginRequest.java
│   │   └── AuthResponse.java
│   ├── casecreation/           # Legal Case creation
│   │   ├── CaseController.java
│   │   ├── CaseService.java
│   │   └── CreateCaseRequest.java
│   ├── documentupload/         # Document upload and analysis
│   │   ├── DocumentController.java
│   │   ├── DocumentService.java
│   │   └── UploadDocumentRequest.java
│   └── summary/                # Clause analysis, summaries, Q&A
│       ├── SummaryController.java
│       ├── SummaryService.java
│       └── AIModelClient.java

├── config/                      # Configs and beans
│   └── OpenAPIConfig.java

├── LexiGuardApplication.java    # Main Spring Boot application
